FloatLayout:
    Image:
        id: frame
        allow_stretch: True
        keep_ratio: False
        size: self.size
        texture: 

    Image:
        id: tick_or_cross
        allow_stretch: True
        keep_ratio: False
        size_hint: (0.25, 0.25)
        pos_hint: {'center_x': 0.15, 'center_y': 0.85}
        color: 0, 0, 0, 0
        texture: 
        
    Label:
        id: text
        text: ''
        multiline: True
        size_hint: (0.65, 0.15)
        pos_hint: {'center_x': 0.6, 'center_y': 0.85}
        background_color: 0, 0, 0, 0
        color: 0, 0, 0, 0

    Button:
        id: loop
        text: ''
        size_hint: (0.22, 0.1)
        pos_hint: {'center_x': 0.5, 'center_y': 0.08}
        on_press: app.loop_button_pressed()
        background_color: 0, 0, 0, 0
        text_color: 0, 0, 0, 0
        color: 0, 0, 0, 0
        disabled: True

    Button:
        id: snap
        text: ''
        size_hint: (0.12, 0.12)
        pos_hint: {'center_x': 0.5, 'center_y': 0.2}
        on_press: app.snap_button_pressed()
        background_color: 0.5, 0.5, 0.5, 1
        text_color: 1, 1, 1, 1
        color: 0.5, 0.5, 0.5, 1
        disabled: False
       